<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ConvertToScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="203dp"
            android:layout_height="104dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/everidoorlogo2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/ttinterfacesregular"
            android:padding="10dp"
            android:text="Enter Activation Code"
            android:textColor="#FDFDFD"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="#FFFFFF"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/ttinterfacesregular"
                android:hint="&#x2731;"
                android:inputType="phone"
                android:maxLength="1"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13.17sp" />

            <EditText
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="#FFFFFF"
                android:focusable="false"
                android:fontFamily="@font/ttinterfacesregular"
                android:hint="&#x2731;"
                android:inputType="phone"
                android:maxLength="1"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13.17sp"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="#FFFFFF"
                android:focusable="false"
                android:fontFamily="@font/ttinterfacesregular"
                android:hint="&#x2731;"
                android:inputType="phone"
                android:maxLength="1"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13.17sp" />

            <EditText
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="#FFFFFF"
                android:focusable="false"
                android:fontFamily="@font/ttinterfacesregular"
                android:hint="&#x2731;"
                android:inputType="phone"
                android:maxLength="1"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13.17sp" />

            <EditText
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="#FFFFFF"
                android:focusable="false"
                android:fontFamily="@font/ttinterfacesregular"
                android:hint="&#x2731;"
                android:inputType="phone"
                android:maxLength="1"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13.17sp" />

            <EditText
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="#FFFFFF"
                android:focusable="false"
                android:fontFamily="@font/ttinterfacesregular"
                android:hint="&#x2731;"
                android:inputType="phone"
                android:maxLength="1"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13.17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/ttinterfacesregular"
            android:text="You will automatically be taken to next screen on activation"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/wowimage" />

</LinearLayout>